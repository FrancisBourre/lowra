package com.bourre.encoding {	import com.bourre.encoding.Deserializer;	import com.bourre.error.IllegalArgumentException;	import com.bourre.log.PixlibStringifier;		import flash.text.StyleSheet;		/**	 * CSS Stylesheet object deserializer.	 * 	 * @author Romain Ecarnot	 * 	 * @see Deserializer	 */	public class CSSDeserializer implements Deserializer	{		//--------------------------------------------------------------------		// Public API		//--------------------------------------------------------------------				/**		 * Creates instance.		 */					public function CSSDeserializer()		{		}				/**		 * @inheritDoc.		 * 		 * <p>Returns content is a <code>StyleSheet</code> instance if deserialization 		 * process is success.</p>		 */		public function deserialize(serializedContent : Object, target : Object = null) : Object		{			try			{				var sheet : StyleSheet = new StyleSheet( );				sheet.parseCSS( serializedContent as String );							return sheet;				}			catch( e : Error )			{				throw( new IllegalArgumentException( this + ".deserialize() error. Content is not CSS compliant" ) );			}						return null;		}				/**		 * Returns string represenation.		 */		public function toString() : String 		{			return PixlibStringifier.stringify( this );		}	}}